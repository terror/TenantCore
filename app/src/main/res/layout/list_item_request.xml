<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/requestItem_ConstraintLayout"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:paddingTop="10dp">

  <TextView
    android:id="@+id/requestTitle_TextView"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:text="Title"
    android:textAllCaps="false"
    android:textSize="16sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <ImageView
    android:id="@+id/requestDate_ImageView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:tint="#0277BD"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/requestTitle_TextView"
    app:srcCompat="@drawable/ic_baseline_calendar_today_24" />

  <TextView
    android:id="@+id/requestDueDate_TextView"
    android:layout_width="wrap_content"
    android:layout_height="0dp"
    android:gravity="center"
    android:paddingStart="5dp"
    android:text="December 20, 2022 at 2:00pm"
    app:layout_constraintBottom_toBottomOf="@+id/requestDate_ImageView"
    app:layout_constraintStart_toEndOf="@+id/requestDate_ImageView"
    app:layout_constraintTop_toTopOf="@+id/requestDate_ImageView" />

  <TextView
    android:id="@+id/requestSatus_TextView"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:gravity="center|end"
    android:paddingEnd="5dp"
    android:text="Accepted"
    android:textColor="#4CAF50"
    android:textSize="14sp"
    app:layout_constraintBottom_toBottomOf="@+id/requestDueDate_TextView"
    app:layout_constraintEnd_toEndOf="@+id/requestTitle_TextView"
    app:layout_constraintStart_toEndOf="@+id/requestDueDate_TextView"
    app:layout_constraintTop_toTopOf="@+id/requestDueDate_TextView" />

  <View
    android:id="@+id/divider"
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:layout_marginTop="16dp"
    android:background="?android:attr/listDivider"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/requestDueDate_TextView" />
</androidx.constraintlayout.widget.ConstraintLayout>
