<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".ui.home.HomeFragment">

  <TextView
    android:id="@+id/textview_first"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="-16dp"
    android:text="Home Fragment"
    app:layout_constraintBottom_toTopOf="@+id/button_temp_to_tenant_home"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <Button
    android:id="@+id/button_temp_to_tenant_home"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Tenant Home"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/textview_first" />

  <Button
    android:id="@+id/button_temp_to_landlord_home"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Landlord Home"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/button_temp_to_tenant_home" />
</androidx.constraintlayout.widget.ConstraintLayout>
